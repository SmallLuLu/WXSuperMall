/* pages/category/category.wxss */
.leftNav,.rightGood{
  float: left;
  height: 100vh;
}
.leftNav{
  width: 30vw;
  background-color: #f6f6f6f6;
}
.rightGood{
  width: 70vw;
}
scroll-view{
  height: 100%;
}
.navList{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #666666;
  font-size: 14px;
}
.navList-active{
 border-left: 2px solid #ff5777; 
 color: #ff5777;
 background-color: #ffffff;
}
.l-category-good{
  width:100% ;
}
.goodsWrap{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.good{
  width: 48%;
  text-align: center;
}
.good image{
  width: 100%;
  border-radius: 5px;
}
.goodtext{
  width: 100%;
}
.goodtext view{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 12px;
  color: #666666;
}
.goodtext text{
  float: left;
}
.goodtext image{
  float: left;
  width: 14px;
  height: 14px;
}
.goodtext .price{
  color: #ff5777;
}